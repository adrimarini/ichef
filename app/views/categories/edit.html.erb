<h1>Edit Category Name</h1>

<%= form_for @category do |f| %>

<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>


<%= f.submit "Submit changes" %>

<% end %>

<%= link_to "Back", categories_path %>
<%= link_to "Delete", category_path, method: :delete, data: { confirm: "Are you sure you want to delete this category?"} %>
