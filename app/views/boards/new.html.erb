<div class="add_board_page">
  <h1>Add a new board</h1>

  <%= form_for @board do |f| %>

      <div>
          <%= f.label :name_of_food %>
          <%= f.text_field :name_of_food %>
          <%= f.collection_select(:category_id, Category.all, :id, :name) %>
      </div>




      <%= f.submit "Add Board", class: "btn btn-default", id: "add_board_button" %>

  <% end %>

  <%= link_to "Back to Cook Book", boards_path, class: "btn btn-default", id: "back_to_cook_book_button" %>
</div>
