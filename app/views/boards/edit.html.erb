<h1>Edit this Board</h1>

<%= form_for @board do |f| %>

<div>
    <%= f.label :name_of_food %>
    <%= f.text_field :name_of_food %>
</div>

<div>
    <%= f.label :category %>
    <%= f.text_field :category %>
</div>

<div>
    <%= f.label :recipe_step %>
    <%= f.text_field :recipe_step %>
</div>

<div>
    <%= f.label :image %>
    <%= f.text_field :image %>
</div>

    <%= f.submit "Submit changes" %>

<% end %>

<%= link_to "Back to Cook Book", boards_path %>
