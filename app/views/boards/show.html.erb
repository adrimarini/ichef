<h1 id="food-name"><%= @board.name_of_food %></h1>
<div class="text-center">
  <%= link_to "edit board", edit_board_path(@board), class: "btn btn-default" %>
</div>
<h2 id="category-name"><%= @board.category.name %></h2>

<div class="image_container">
  <% @board.images.each do |image| %>
    <%= image_tag(image.url) %> <%= link_to "Delete Image", image_path(image), method: :delete, data: { confirm: "Are you sure you want to delete this image?"} %>
  <% end %>
</div>

<div class="recipe_container" id="recipe_form">
<% @board.recipe_steps.order(created_at: :asc).each do |recipe_step| %>
  <li class="recipe_lines"><%= recipe_step.step %> <%= link_to "edit", edit_recipe_step_path(recipe_step.id) %></li>
<% end %>

<%= form_for @recipe_step do |f| %>
    <div>
        <%= f.label "steps to recipe:" %>
        <%= f.text_field :step, autofocus: "on" %>
    </div>

<%= f.hidden_field :board_id, :value => @board.id %>
    <%= f.submit "Add step", :class => 'submit_button' %>
<% end %>
</div>


<div class="footer">
<%= link_to "Add Image", new_image_path(board_id: @board.id) %>
<%= link_to "Back to Cook Book", boards_path %>
<%= link_to "Delete Board", board_path, method: :delete, data: { confirm: "Are you sure you want to delete this board?"} %>
</div>
