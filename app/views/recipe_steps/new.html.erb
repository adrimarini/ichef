<h1>Add a new Recipe</h1>

<%= form_for @recipe_step do |f| %>

    <div>
        <%= f.label :step %>
        <%= f.text_field :step %>
    </div>

<%= f.hidden_field :board_id, :value => params[:board_id] %>

    <%= f.submit "Create recipe step" %>

<% end %>

<%= link_to "Back to the recipes list", recipe_steps_path %>
